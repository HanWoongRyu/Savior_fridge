<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9F9"
    android:orientation="vertical"
    tools:context=".Main_Act">


    <Button
        android:id="@+id/btn_item_capture"
        android:layout_width="132dp"
        android:layout_height="110dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_radius"
        android:text="사진\n등록"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_bill_capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw" />

    <Button
        android:id="@+id/btn_bill_capture"
        android:layout_width="131dp"
        android:layout_height="109dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/button_radius"
        android:text="영수증\n등록"
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw" />


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_radius"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bill_capture"
        app:layout_constraintVertical_bias="1.0" />

    <Switch
        android:id="@+id/sw"
        android:layout_width="210dp"
        android:layout_height="57dp"
        android:layout_marginTop="14dp"
        android:text="유통기한 알림 설정"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="296dp"
        android:layout_height="335dp"
        android:contentDescription="TODO"
        android:soundEffectsEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/refregirator" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="156dp"
        android:layout_height="161dp"
        android:gravity="center"
        android:text="냉장고\n열기"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.196" />


</androidx.constraintlayout.widget.ConstraintLayout>